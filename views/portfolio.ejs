<style>
  
  /* ===============================
   PAGE HEADER
================================ */
  .page-header {
    padding: 100px 0 60px;
    text-align: center;
    background: linear-gradient(135deg,
        rgba(124, 58, 237, 0.18),
        rgba(91, 33, 182, 0.12));
  }

  .page-header h1 {
    font-size: 3rem;
    font-weight: 800;
  }

  .page-header p {
    color: var(--text-muted);
  }

  /* ===============================
   PORTFOLIO
================================ */
  .portfolio-section {
    padding: 100px 0;
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2.5rem;
  }

  .portfolio-card {
    background: var(--bg-card);
    padding: 36px 28px;
    border-radius: 18px;
    text-align: center;
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow);
    transition: var(--transition);
  }

  .portfolio-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary-color);
  }

  .portfolio-tag {
    display: inline-block;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: #fff;
    padding: 7px 16px;
    border-radius: 30px;
    font-size: 0.8rem;
  }

  /* ===============================
   TEAM SECTION
================================ */
  .team-section {
    padding: 100px 0;
    background: var(--bg-light);
  }

  .team-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  /* GRID FIX: 3 + 2 */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
    justify-items: center;
  }

  /* Center second row */
  .team-card:nth-child(4) {
    grid-column: 1 / 2;
  }

  .team-card:nth-child(5) {
    grid-column: 2 / 3;
  }

  /* ===============================
   TEAM CARD
================================ */
  .team-card {
    width: 100%;
    max-width: 300px;
    background: var(--bg-card);
    border-radius: 18px;
    box-shadow: var(--shadow);
    padding: 24px;
    height: 270px;
    text-align: center;
    transition: all 0.35s ease;
    overflow: hidden;
    border-top: 0.1px solid white;
  }

  .team-card:hover {
    height: 470px;
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  /* Image */
  .team-image img {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--primary-color);
    margin-left: 3.5rem;
    margin-bottom: 14px;
  }

  /* Info */
  .team-info {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.35s ease;
  }

  .team-card:hover .team-info {
    opacity: 1;
    transform: translateY(0);
  }

  .team-info h3 {
    font-size: 1.1rem;
    font-weight: 700;
  }

  .team-info span {
    font-size: 0.9rem;
    color: var(--primary-color);
  }

  .team-info p {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  /* Social */
  .team-social {
    display: inline-grid;
    place-items: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: #fff;
    font-size: 1rem;
  }

  /* ===============================
   FLOATING SOCIALS
================================ */
  .floating-socials {
    position: fixed;
    right: 22px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    gap: 14px;
    z-index: 999;
  }

  .floating-socials a {
    width: 46px;
    height: 46px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    color: #fff;
    font-size: 1.2rem;
    box-shadow: var(--shadow);
    z-index: 1;
  }
  .floating-socials a:hover {
  transform: translateY(-4px) scale(1.05);
  box-shadow: var(--shadow-lg);
}

 .social-instagram {
  background: linear-gradient(135deg, #833ab4, #fd1d1d, #fcb045);
}

.social-linkedin {
  background: linear-gradient(135deg, #0a66c2, #004182);
}

.social-whatsapp {
  background: linear-gradient(135deg, #04ff00, #87f96d);
}

.social-github {
  background: linear-gradient(135deg, #24292e, #000000);
}

  /* ===============================
   RESPONSIVE
================================ */
  @media (max-width: 992px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .team-card:nth-child(4),
    .team-card:nth-child(5) {
      grid-column: auto;
    }
  }

  @media (max-width: 768px) {
  .page-header h1 {
    font-size: 2.3rem;
  }

  .portfolio-section {
    padding: 80px 0;
  }

  .floating-socials {
    right: 14px;
  }

  .floating-socials a {
    width: 40px;
    height: 40px;
    font-size: 1rem;
  }
}
</style>

