  <style>
    /* ===============================
   GLOBAL VARIABLES
================================ */
    :root {
      --primary: #7c3aed;
      --secondary: #5b21b6;
      --accent: #a855f7;

      --bg-dark: #0b0614;
      --bg-card: #141033;
      --bg-soft: #0f172a;

      --text-main: #f5f3ff;
      --text-muted: #c4b5fd;

      --border: #2e1065;

      --shadow: 0 10px 30px rgba(124, 58, 237, 0.25);
      --shadow-lg: 0 18px 50px rgba(124, 58, 237, 0.45);

      --transition: all 0.35s ease;
    }

    /* ===============================
   RESET & BASE
================================ */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Inter", "Poppins", sans-serif;
      background: var(--bg-dark);
      color: var(--text-main);
      line-height: 1.7;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    ul {
      list-style: none;
    }

    .container {
      max-width: 1200px;
      margin: auto;
      padding: 0 20px;
    }

    /* ===============================
   PAGE HEADER
================================ */
    .page-header {
      padding: 100px 0 70px;
      text-align: center;
      background: linear-gradient(135deg,
          rgba(124, 58, 237, 0.25),
          rgba(91, 33, 182, 0.35));
      border-bottom: 1px solid var(--border);
    }

    .page-header h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 10px;
    }

    .page-header p {
      font-size: 1.1rem;
      color: var(--text-muted);
      max-width: 700px;
      margin: auto;
    }

    /* ===============================
   SERVICES SECTION
================================ */
    .services-page {
      padding: 90px 0;
    }

    .service-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2.5rem;
    }

    /* ===============================
   SERVICE CARD
================================ */
    .service-box {
      background: linear-gradient(180deg,
          rgba(124, 58, 237, 0.05),
          rgba(124, 58, 237, 0.01));
      border: 1px solid rgba(124, 58, 237, 0.18);
      border-radius: 18px;
      padding: 2.2rem;
      box-shadow: var(--shadow);
      transition: var(--transition);
      position: relative;
      overflow: hidden;
    }

    .service-box::before {
      content: "";
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at top right,
          rgba(124, 58, 237, 0.15),
          transparent 60%);
      opacity: 0;
      transition: var(--transition);
    }

    .service-box:hover::before {
      opacity: 1;
    }

    .service-box:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-lg);
    }

    /* Icon */
    .service-box .icon {
      font-size: 2.8rem;
      display: inline-block;
      margin-bottom: 15px;
    }

    /* Title */
    .service-box h3 {
      font-size: 1.35rem;
      font-weight: 700;
      margin-bottom: 10px;
      color: var(--accent);
    }

    /* Description */
    .service-box p {
      font-size: 0.95rem;
      color: var(--text-muted);
      margin-bottom: 15px;
    }

    /* List */
    .service-box ul {
      margin-top: 10px;
    }

    .service-box ul li {
      font-size: 0.9rem;
      color: var(--text-main);
      padding-left: 20px;
      position: relative;
      margin-bottom: 8px;
    }

    .service-box ul li::before {
      content: "‚úî";
      position: absolute;
      left: 0;
      color: var(--primary);
      font-size: 0.8rem;
    }

    /* ===============================
   CTA SECTION
================================ */
    .cta-section {
      padding: 90px 0;
      text-align: center;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
    }

    .cta-section h2 {
      font-size: 2.6rem;
      margin-bottom: 10px;
    }

    .cta-section p {
      font-size: 1.05rem;
      opacity: 0.95;
      margin-bottom: 30px;
    }

    /* ===============================
   BUTTONS
================================ */
    .btn {
      display: inline-block;
      padding: 14px 36px;
      border-radius: 12px;
      font-weight: 600;
      transition: var(--transition);
    }

    .btn-primary {
      background: #fff;
      color: var(--secondary);
    }

    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    }

    /* ===============================
   RESPONSIVE
================================ */
    @media (max-width: 768px) {
      .page-header h1 {
        font-size: 2.2rem;
      }

      .cta-section h2 {
        font-size: 2rem;
      }
    }

    @media (max-width: 480px) {
      .service-box {
        padding: 1.8rem;
      }

      .service-box h3 {
        font-size: 1.2rem;
      }
    }
  </style>
</head>

