    /* ===============================
   FOOTER
================================ */
.footer {
  background: var(--bg-dark-blue);
  padding: 70px 0 25px;
  color: var(--text-muted);
}

/* ===============================
   FOOTER GRID
================================ */
.footer-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 3rem;
  align-items: flex-start;
}

/* ===============================
   FOOTER COLUMNS
================================ */
.footer-col h3 {
  font-size: 1.9rem;
  font-weight: 800;
  color: var(--primary-color);
  margin-bottom: 14px;
}

.footer-col h4 {
  font-size: 1.15rem;
  color: var(--text-main);
  margin-bottom: 18px;
  position: relative;
}

/* Underline */
.footer-col h4::after {
  content: "";
  width: 42px;
  height: 3px;
  background: var(--primary-color);
  position: absolute;
  left: 0;
  bottom: -8px;
  border-radius: 10px;
}

/* ===============================
   TEXT & LINKS
================================ */
.footer-col p {
  font-size: 0.95rem;
  line-height: 1.7;
  color: var(--text-muted);
}

.footer-col ul {
  list-style: none;
  padding: 0;
}

.footer-col ul li {
  margin-bottom: 10px;
  font-size: 0.95rem;
}

/* Links hover effect */
.footer-col ul li a,
.footer-col p a {
  color: var(--text-muted);
  text-decoration: none;
  transition: var(--transition);
}

.footer-col ul li a:hover,
.footer-col p a:hover {
  color: var(--accent-color);
  padding-left: 6px;
}

/* ===============================
   FOOTER BOTTOM
================================ */
.footer-bottom {
  margin-top: 50px;
  padding-top: 18px;
  border-top: 1px solid var(--border-color);
  text-align: center;
}

.footer-bottom p {
  font-size: 0.9rem;
  color: #9ca3af;
}

/* ===============================
   RESPONSIVE DESIGN
================================ */
@media (max-width: 992px) {
  .footer-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 2.5rem;
  }
}

@media (max-width: 576px) {
  .footer {
    text-align: center;
  }

  .footer-grid {
    grid-template-columns: 1fr;
  }

  .footer-col h4::after {
    left: 50%;
    transform: translateX(-50%);
  }
}

